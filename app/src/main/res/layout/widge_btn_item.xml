<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llActionBarLayout"
    style="@style/PlusBar_Item"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivLeftDivider"
        android:layout_width="@dimen/actionbar_header_divider_width"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/ivBtnImg"
        android:layout_width="@dimen/actionbar_button_width"
        android:layout_height="@dimen/actionbar_button_height"
        android:layout_gravity="left|center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/tvBtnText"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/actionbar_button_text_height"
        android:layout_gravity="center_vertical"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textAppearance="@style/style_item_font_16"
        android:textColor="@color/titleTextColor"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/ivRightDivider"
        android:layout_width="@dimen/actionbar_header_divider_width"
        android:layout_height="match_parent" />

</LinearLayout>