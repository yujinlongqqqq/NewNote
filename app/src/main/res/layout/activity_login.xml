<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:id="@+id/ll_login_pane"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/bg_edittext_normal"
        android:orientation="vertical">

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableLeft="@mipmap/icon_user"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:hint="@string/userName"
            android:minHeight="50dp"
            android:padding="10dp"
            android:singleLine="true"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/rowLines" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:drawableLeft="@mipmap/icon_lock"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:hint="@string/passWord"
                android:inputType="textPassword"
                android:maxLength="40"
                android:minHeight="50dp"
                android:padding="10dp"
                android:singleLine="true"
                android:layout_weight="1"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/lg_checkbox"
                android:button="@null"
                android:background="@drawable/check_pass"
                android:layout_width="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical|right"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </LinearLayout>

    <com.yujinlong.note.view.OwlView
        android:id="@+id/owl_view"
        android:layout_width="175dp"
        android:layout_height="107dp"
        android:layout_above="@+id/ll_login_pane"
        android:layout_centerHorizontal="true" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_login_pane"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="35dp"
            android:layout_gravity="center"
            android:layout_height="35dp"
            android:padding="5dp"
            android:background="@drawable/bg_login"
            android:src="@mipmap/icon_wenhao"/>
    </LinearLayout>

</RelativeLayout>